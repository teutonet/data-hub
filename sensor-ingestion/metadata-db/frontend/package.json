{
	"name": "frontend",
	"version": "0.0.1",
	"private": true,
	"type": "module",
	"engines": {
		"node": ">=18.0.0",
		"npm": "^10.0.0"
	},
	"scripts": {
		"dev": "vite dev --host 0.0.0.0",
		"build": "vite build",
		"preview": "vite preview",
		"test": "npm run test:integration && npm run test:unit",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"test:integration": "playwright test",
		"test:unit": "vitest",
		"generate-types": "graphql-codegen",
		"lint:check": "npm-run-all --parallel lint:check:**",
		"lint:check:svelte": "NODE_OPTIONS=--no-experimental-fetch svelte-check --fail-on-warnings",
		"lint:check:ts": "tsc --noEmit",
		"lint:check:eslint": "eslint --cache --max-warnings 0 src",
		"lint:fix": "eslint --cache --fix src"
	},
	"devDependencies": {
		"@graphql-codegen/cli": "5.0.2",
		"@graphql-codegen/typescript": "4.0.4",
		"@graphql-codegen/typescript-operations": "4.1.2",
		"@iconify-json/heroicons": "1.1.20",
		"@playwright/test": "1.42.1",
		"@sveltejs/adapter-static": "3.0.1",
		"@sveltejs/kit": "2.5.4",
		"@sveltejs/vite-plugin-svelte": "3.0.2",
		"@testing-library/jest-dom": "6.4.2",
		"@testing-library/svelte": "4.1.0",
		"@types/node": "20.11.19",
		"@typescript-eslint/eslint-plugin": "7.0.1",
		"@typescript-eslint/parser": "7.0.1",
		"@vitest/coverage-istanbul": "1.3.0",
		"autoprefixer": "10.4.17",
		"eslint": "8.56.0",
		"eslint-config-prettier": "9.1.0",
		"eslint-plugin-jest": "27.9.0",
		"eslint-plugin-svelte": "2.35.1",
		"eslint-plugin-vitest": "0.3.22",
		"jsdom": "24.0.0",
		"npm-run-all": "4.1.5",
		"postcss": "8.4.35",
		"postcss-load-config": "5.0.3",
		"prettier": "3.2.5",
		"prettier-plugin-svelte": "3.1.2",
		"prettier-plugin-tailwindcss": "0.5.12",
		"react": "18.2.0",
		"react-dom": "18.2.0",
		"sass": "1.71.0",
		"svelte": "4.2.11",
		"svelte-check": "3.6.4",
		"svelte-eslint-parser": "0.33.1",
		"svelte-preprocess": "5.1.3",
		"tailwindcss": "3.4.1",
		"tslib": "2.6.2",
		"tw-colors": "3.3.1",
		"typescript": "5.3.3",
		"unplugin-icons": "0.18.5",
		"vite": "5.1.3",
		"vitest": "1.3.0"
	},
	"dependencies": {
		"@sentry/sveltekit": "7.101.1",
		"@types/leaflet": "1.9.8",
		"@urql/exchange-request-policy": "1.0.2",
		"@urql/exchange-retry": "1.2.1",
		"@urql/svelte": "4.1.1",
		"csv-parse": "5.5.5",
		"flowbite": "2.3.0",
		"flowbite-svelte": "0.44.23",
		"graphql": "16.8.1",
		"graphql-ws": "5.15.0",
		"leaflet": "1.9.4",
		"oidc-client-ts": "2.4.0",
		"on-change": "5.0.1",
		"svelte-i18n": "4.0.0",
		"tailwind-merge": "2.2.1"
	},
	"lint-staged": {
		"*.{cjs,json,css,scss,htm,html,md,yml,yaml}": "node_modules/.bin/prettier --write",
		"**/!(generated|mock-app)/*.{js,ts}": [
			"eslint --cache --max-warnings 0 --fix"
		],
		"**/!(generated)/*.{js,ts}": [
			"node_modules/.bin/prettier --write"
		],
		"*.svelte": [
			"npm run lint:check:svelte",
			"eslint --cache --max-warnings 0 --fix",
			"node_modules/.bin/prettier --write --plugin prettier-plugin-svelte --plugin prettier-plugin-tailwindcss"
		]
	}
}
